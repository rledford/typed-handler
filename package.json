{
  "name": "typed-handler",
  "version": "0.1.0",
  "description": "A TypeScript library that provides a fluent, type-safe API for building request handlers with automatic validation and framework-agnostic design",
  "keywords": [
    "typescript",
    "handler",
    "validation",
    "express",
    "fastify",
    "hono",
    "zod",
    "joi",
    "yup",
    "type-safe",
    "framework-agnostic"
  ],
  "author": "Ryan Ledford <rledford@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rledford/typed-handler.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js",
      "require": "./dist/adapters/index.cjs"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "dev": "tsx watch examples/express-zod/index.ts",
    "build": "tsup && cp index.test-d.ts dist/",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage",
    "test:types": "tsd",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build && pnpm test && pnpm test:types",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish --access public"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.9",
    "@vitest/coverage-v8": "^2.1.8",
    "express": "^4.21.2",
    "fastify": "^5.2.0",
    "hono": "^4.6.15",
    "joi": "^17.13.3",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.12.1",
    "tsd": "^0.31.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "yup": "^1.4.0",
    "zod": "^3.23.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm type-check && pnpm exec vitest run"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": ["biome check --apply"]
  },
  "packageManager": "pnpm@8.15.0"
}
